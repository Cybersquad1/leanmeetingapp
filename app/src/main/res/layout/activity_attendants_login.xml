<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mrgenco.leanmeetingapp.AttendantsLoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attendantEmailEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Your Email"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attendantTicketIDEditText"
        android:layout_below="@+id/attendantEmailEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Your Ticket ID"
        android:layout_marginTop="5dp"
        android:inputType="number"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/loginAttendantButton"
        android:onClick="loginAttendant"
        android:textColor="#38b44c"
        android:layout_below="@+id/attendantTicketIDEditText"
        android:layout_alignRight="@+id/attendantTicketIDEditText"
        android:layout_alignEnd="@+id/attendantTicketIDEditText" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FACE RECOGNITION"
        android:id="@+id/button"
        android:textColor="#F93C2B"
        android:layout_below="@+id/loginAttendantButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/errorTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#F93C2B" />

</RelativeLayout>
